<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Use JSON encoder when Datadog is enabled, otherwise use pattern -->
    <springProfile name="!datadog">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>
    </springProfile>

    <springProfile name="datadog">
        <!-- Structured JSON logging for Datadog -->
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
                <providers>
                    <!-- Timestamp -->
                    <timestamp>
                        <timeZone>UTC</timeZone>
                    </timestamp>
                    <!-- Log level -->
                    <logLevel/>
                    <!-- Logger name -->
                    <loggerName/>
                    <!-- Message -->
                    <message/>
                    <!-- Thread name -->
                    <mdc/>
                    <!-- Stack trace -->
                    <stackTrace>
                        <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                            <maxDepthPerThrowable>30</maxDepthPerThrowable>
                            <maxLength>2048</maxLength>
                            <shortenedClassNameLength>20</shortenedClassNameLength>
                            <rootCauseFirst>true</rootCauseFirst>
                        </throwableConverter>
                    </stackTrace>
                    <!-- Datadog trace correlation (from MDC) -->
                    <pattern>
                        <pattern>
                            {
                                "dd.trace_id": "%mdc{dd.trace_id:-}",
                                "dd.span_id": "%mdc{dd.span_id:-}",
                                "dd.service": "${DD_SERVICE:-policy-insight}",
                                "dd.env": "${DD_ENV:-local}",
                                "dd.version": "${DD_VERSION:-unknown}",
                                "request_id": "%mdc{request_id:-}",
                                "correlation_id": "%mdc{correlationId:-}",
                                "job_id": "%mdc{job_id:-}"
                            }
                        </pattern>
                    </pattern>
                </providers>
            </encoder>
        </appender>
    </springProfile>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Application-specific loggers -->
    <logger name="com.policyinsight" level="DEBUG"/>
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.hibernate" level="WARN"/>
</configuration>

